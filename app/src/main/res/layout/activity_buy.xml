<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:background="@mipmap/food4"
        tools:context=".BuyActivity">

      <include layout="@layout/header"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:paddingLeft="@dimen/_20sdp"
                    android:text="Your Order : "
                    android:textColor="#ffff"
                    android:textSize="@dimen/_20ssp" />

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:padding="40dp"

                    >

                <ImageView
                        android:id="@+id/orderimg"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_90sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:scaleType="fitXY"
                        android:src="@drawable/hamburger" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_110sdp"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/ordername"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_marginTop="50dp"
                            android:gravity="center"
                            android:text="Order Details"
                            android:textSize="@dimen/_20sdp" />

                    <TextView
                            android:id="@+id/orderprice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:gravity="center"
                            android:text="Price"
                            android:textSize="@dimen/_20sdp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingLeft="20dp"
                            android:text="Quantity"
                            android:textSize="20dp" />

                    <Button
                            android:id="@+id/minus"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="90dp"
                            android:background="#0FECDE"
                            android:text="-"
                            android:textAlignment="center"
                            android:textColor="#ffff"
                            android:textSize="25dp" />

                    <TextView
                            android:id="@+id/result"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"

                            android:gravity="center"
                            android:text="0"
                            android:textSize="20dp" />

                    <Button
                            android:id="@+id/plus"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="10dp"
                            android:background="#0FECDE"
                            android:text="+"
                            android:textAlignment="center"
                            android:textColor="#ffff"
                            android:textSize="25dp" />

                </LinearLayout>

                <Button
                        android:id="@+id/promo"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="100dp"
                        android:text="apply promocode"
                        android:textAllCaps="false"
                        android:background="#0FECDE"
                        android:textColor="#ffff" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="180dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="12dp"
                            android:text="Total Price"
                            android:textSize="20sp" />

                    <TextView
                            android:id="@+id/total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="160dp"
                            android:paddingLeft="12dp"
                            android:text="0.00"
                            android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="230dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="12dp"
                            android:text="Discount"
                            android:textSize="20sp" />

                    <TextView
                            android:id="@+id/disc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="180dp"
                            android:paddingLeft="12dp"
                            android:text="0.00"
                            android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="280dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="12dp"
                            android:text="Bill Amt."
                            android:textColor="#3949AB"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    <TextView
                            android:id="@+id/bill"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="185dp"
                            android:paddingLeft="12dp"
                            android:text="0.00"
                            android:textColor="#3949AB"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:id="@+id/detail"
                    android:layout_width="360dp"
                    android:layout_height="500dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:padding="30sp"
                    android:paddingLeft="20dp">


                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="30dp"
                        android:text="Enter your details :"
                        android:textColor="#000"
                        android:textSize="20dp" />


                <EditText
                        android:id="@+id/Entername"
                        android:layout_width="320dp"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="45dp"
                        android:hint="Enter name*"
                        android:paddingLeft="10dp" />


                <EditText
                        android:id="@+id/Enterphone"
                        android:layout_width="320dp"
                        android:layout_height="50dp"
                        android:layout_below="@+id/Entername"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="100dp"
                        android:hint="Enter phone number*"
                        android:inputType="number"
                        android:paddingLeft="10dp" />


                <EditText
                        android:id="@+id/enteraddress"
                        android:layout_width="320dp"
                        android:layout_height="105dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="180dp"
                        android:ems="10"
                        android:hint="Enter your address*"
                        android:inputType="textPersonName"
                        android:paddingLeft="10dp" />

                <Button
                        android:id="@+id/checkout"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="350dp"
                        android:background="@drawable/border"
                        android:text="Proceed to checkout"
                        android:textAllCaps="false"
                        android:textColor="#ffff" />
            </androidx.cardview.widget.CardView>



        </LinearLayout>

    </ScrollView>
</LinearLayout>

